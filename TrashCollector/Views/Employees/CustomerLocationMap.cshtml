@model TrashCollector.Models.GeoCoderToFindCustomerLocation

@{
    ViewBag.Title = "CustomerLocationMap";
}

<html>
<head>
    <style>
        #map {
            height: 400px; 
            width: 100%; 
        }
    </style>
</head>
<body>
    <h3>My Google Maps Demo</h3>
    <div id="map"></div>
    <script>
        function initMap() {
            var address = @Html.Raw(Json.Encode(Model.address));
            var geocoder = new google.maps.Geocoder();
            geocoder.geocode({ 'address': address }, function (results, status) {
                if (status == google.maps.GeocoderStatus.ok) {
                    var latitude = results[0].geometry.location.lat();
                    var longitude = results[0].geometry.location.lng();
                }
            });
            var wisconsin = { lat: 43.784439, lng: -88.7879 };

            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 4, center: wisconsin });

            var marker = new google.maps.Marker({ position: wisconsin, map: map });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBODztrEdGOpQ8GjPFCTYgWpPz_VHxXBBg&callback=initMap"
</body>
</html>
